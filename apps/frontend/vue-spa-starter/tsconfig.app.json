{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "components.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.stories.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.cy.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
