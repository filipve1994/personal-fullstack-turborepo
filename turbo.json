{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "//#docs:build": {
      "outputs": [
        ".vitepress/dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
